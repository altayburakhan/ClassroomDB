@using ClassroomSystem.Services
@inject IThemeService ThemeService
@{
    var userId = User.Identity.IsAuthenticated ? User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value : null;
    var currentTheme = await ThemeService.GetCurrentThemeAsync(userId);
}

<!DOCTYPE html>
<html lang="en" data-theme="@currentTheme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Classroom System Admin</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Icons -->
    <link href="https://cdn.jsdelivr.net/npm/@@mdi/font@7.2.96/css/materialdesignicons.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa;
        }
        .navbar-custom {
            background-color: #fff;
            box-shadow: 0 0 35px 0 rgba(154,161,171,.15);
        }
        .left-side-menu {
            background-color: #fff;
            box-shadow: 0 0 35px 0 rgba(154,161,171,.15);
            position: fixed;
            top: 70px;
            left: 0;
            bottom: 0;
            width: 250px;
            padding: 20px;
            z-index: 10;
            overflow-y: auto;
        }
        .content-page {
            margin-left: 250px;
            padding: 70px 12px 65px;
        }
        .logo-box {
            padding: 20px 0;
        }
        #side-menu {
            list-style: none;
            padding: 0;
        }
        #side-menu li {
            margin: 5px 0;
        }
        #side-menu a {
            color: #6c757d;
            text-decoration: none;
            padding: 10px 15px;
            display: block;
            border-radius: 5px;
            transition: all 0.3s;
        }
        #side-menu a:hover,
        #side-menu a.active {
            background-color: #f1f3fa;
            color: #727cf5;
        }
        #side-menu a i {
            margin-right: 10px;
            font-size: 18px;
        }
        .menu-title {
            padding: 12px 20px;
            letter-spacing: .05em;
            pointer-events: none;
            cursor: default;
            font-size: 11px;
            text-transform: uppercase;
            color: #adb5bd;
            font-weight: 600;
        }
        .card {
            box-shadow: 0 0 35px 0 rgba(154,161,171,.15);
            border: none;
            margin-bottom: 24px;
        }
        .card-header {
            background-color: #fff;
            border-bottom: 1px solid #e3e6f0;
        }
        .footer {
            background-color: #fff;
            border-top: 1px solid #e3e6f0;
            padding: 20px;
            position: fixed;
            bottom: 0;
            right: 0;
            left: 250px;
        }
        .profile-dropdown {
            min-width: 200px;
            padding: 10px;
        }
        .profile-dropdown .dropdown-item {
            padding: 8px 20px;
        }
        .profile-dropdown .dropdown-item i {
            margin-right: 10px;
        }
        .avatar-sm {
            height: 2.5rem;
            width: 2.5rem;
        }
        .avatar-title {
            align-items: center;
            background-color: #727cf5;
            color: #fff;
            display: flex;
            font-weight: 500;
            height: 100%;
            justify-content: center;
            width: 100%;
        }
        /* Mobile menu button */
        .mobile-menu-btn {
            display: none;
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 100;
            padding: 8px 12px;
            background-color: #fff;
            border: 1px solid #e3e6f0;
            border-radius: 4px;
        }
        @* Media query for mobile devices *@
        @@media (max-width: 767.98px) {
            .mobile-menu-btn {
                display: block;
            }
            .left-side-menu {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }
            .left-side-menu.show {
                transform: translateX(0);
            }
            .content-page {
                margin-left: 0;
                padding-top: 90px;
            }
            .footer {
                left: 0;
            }
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Begin page -->
    <div id="wrapper">
        <!-- Mobile menu button -->
        <button class="mobile-menu-btn" type="button">
            <i class="mdi mdi-menu"></i>
        </button>

        <!-- Topbar Start -->
        <div class="navbar-custom fixed-top">
            <div class="container-fluid">
                <ul class="list-unstyled topnav-menu float-end mb-0">
                    <li class="dropdown">
                        <a class="nav-link dropdown-toggle nav-user me-0 waves-effect waves-light" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            <img src="~/images/users/default-avatar.png" alt="user-image" class="rounded-circle" width="32">
                            <span class="ms-1 d-none d-md-inline-block">
                                @User.FindFirst("FullName")?.Value <i class="mdi mdi-chevron-down"></i>
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end profile-dropdown">
                            <div class="dropdown-header noti-title">
                                <h6 class="text-overflow m-0">Welcome!</h6>
                            </div>
                            <a href="javascript:void(0);" class="dropdown-item notify-item">
                                <i class="mdi mdi-account"></i>
                                <span>My Account</span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <form class="form-inline" asp-area="" asp-page="/Account/Logout" method="post">
                                <button type="submit" class="dropdown-item notify-item">
                                    <i class="mdi mdi-logout"></i>
                                    <span>Logout</span>
                                </button>
                            </form>
                        </div>
                    </li>
                </ul>

                <!-- LOGO -->
                <div class="logo-box">
                    <a href="/Admin" class="logo logo-dark text-center">
                        <span class="logo-lg">
                            <h4 class="m-0">Classroom System</h4>
                        </span>
                    </a>
                </div>
            </div>
        </div>
        <!-- end Topbar -->

        <!-- ========== Left Sidebar Start ========== -->
        <div class="left-side-menu">
            <div class="h-100">
                <div id="sidebar-menu">
                    <ul id="side-menu">
                        <li class="menu-title">Navigation</li>
                        <li>
                            <a href="/Admin" class="@(Context.Request.Path == "/Admin" ? "active" : "")">
                                <i class="mdi mdi-view-dashboard"></i>
                                <span> Dashboard </span>
                            </a>
                        </li>
                        <li>
                            <a href="/Admin/Users" class="@(Context.Request.Path == "/Admin/Users" ? "active" : "")">
                                <i class="mdi mdi-account-multiple"></i>
                                <span> Users </span>
                            </a>
                        </li>
                        <li>
                            <a href="/Admin/Classrooms" class="@(Context.Request.Path == "/Admin/Classrooms" ? "active" : "")">
                                <i class="mdi mdi-office-building"></i>
                                <span> Classrooms </span>
                            </a>
                        </li>
                        <li>
                            <a href="/Admin/Instructors" class="@(Context.Request.Path == "/Admin/Instructors" ? "active" : "")">
                                <i class="mdi mdi-account-tie"></i>
                                <span> Instructors </span>
                            </a>
                        </li>
                        <li>
                            <a href="/Admin/Terms" class="@(Context.Request.Path == "/Admin/Terms" ? "active" : "")">
                                <i class="mdi mdi-calendar-clock"></i>
                                <span> Terms </span>
                            </a>
                        </li>
                        <li>
                            <a href="/Admin/Reservations" class="@(Context.Request.Path == "/Admin/Reservations" ? "active" : "")">
                                <i class="mdi mdi-calendar-check"></i>
                                <span> Reservations </span>
                            </a>
                        </li>
                        <li>
                            <a href="/Admin/Feedback" class="@(Context.Request.Path == "/Admin/Feedback" ? "active" : "")">
                                <i class="mdi mdi-comment-multiple"></i>
                                <span> Feedback </span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <!-- Left Sidebar End -->

        <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->
        <div class="content-page">
            <div class="content">
                <!-- Start Content-->
                <div class="container-fluid">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @RenderBody()
                </div>
                <!-- container -->
            </div>
            <!-- content -->

            <!-- Footer Start -->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            &copy; @DateTime.Now.Year - Classroom System
                        </div>
                    </div>
                </div>
            </footer>
            <!-- end Footer -->
        </div>
        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->
    </div>
    <!-- END wrapper -->

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Mobile menu toggle
        document.querySelector('.mobile-menu-btn').addEventListener('click', function() {
            document.querySelector('.left-side-menu').classList.toggle('show');
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', function(event) {
            const menu = document.querySelector('.left-side-menu');
            const menuBtn = document.querySelector('.mobile-menu-btn');
            if (!menu.contains(event.target) && !menuBtn.contains(event.target) && menu.classList.contains('show')) {
                menu.classList.remove('show');
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 