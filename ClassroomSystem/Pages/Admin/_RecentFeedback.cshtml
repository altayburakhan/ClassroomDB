@model List<ClassroomSystem.Models.Feedback>

<div class="list-group">
    @foreach (var feedback in Model)
    {
        <div class="list-group-item">
            <div class="d-flex w-100 justify-content-between">
                <h6 class="mb-1">@feedback.Classroom.Name</h6>
                <small>@feedback.CreatedAt.ToString("MM/dd/yyyy")</small>
            </div>
            <p class="mb-1">@feedback.Comment</p>
            <div class="d-flex justify-content-between align-items-center">
                <small>@feedback.User.FirstName @feedback.User.LastName</small>
                <div class="rating">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <i class="fas fa-star @(i <= feedback.Rating ? "text-warning" : "text-muted")"></i>
                    }
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center text-muted">
        <p>No feedback available</p>
    </div>
} 